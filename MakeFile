# Compiler
CXX = g++

# Compiler flags
CXXFLAGS = -Wall -std=c++11 -I./include -g

# Target executable name
TARGET = pong

# Source files
SRCS = $(wildcard src/*.cpp)

# Build directory
BUILDDIR = build

# Bin directory
BINDIR = bin

# Object files
OBJS = $(patsubst src/%.cpp, $(BUILDDIR)/%.o, $(SRCS))

all: $(BUILDDIR) $(BINDIR)/$(TARGET)

$(BINDIR)/$(TARGET): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS)

$(BUILDDIR)/%.o: src/%.cpp
	$(CXX) $(CXXFLAGS) -c $< -o $@

$(BUILDDIR):
	mkdir -p $(BUILDDIR)

$(BINDIR):
	mkdir -p $(BINDIR)

clean:
	$(RM) -r $(BUILDDIR) $(BINDIR)
